use strict;
use warnings;

$main::VERSION = 'v6.6.6';

use File::Basename qw( basename );
use Getopt::Guided qw( processopts );

sub print_version {
  print STDOUT basename( $0 ) . ' ' . $main::VERSION, "\n"
}

sub run ( \@ ) {
  local @ARGV = @{ $_[ 0 ] };

  return 2 unless processopts V => \&print_version, h => sub { };
  0
}

exit run @ARGV
